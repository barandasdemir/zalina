<%- include partials/header %>

<div class="container cartwrapper">
    <br>
    <h5 class="center"><b>ALIŞVERİŞ SEPETİ</b></h5>
    <br>


    <div class="row">
        <div class="col s8 m8 cart">
            <% if (cart && cart.length > 0) { %>
            <% cart.forEach((item, index) => { %>
            <div id="<%= item.id %>" class="card horizontal">
                <div class="card-image">
                    <img src="https://via.placeholder.com/150x190.jpg?text=insert+image+here">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <button class="btn z-depth-0 button-rm right white red-text" style="cursor:pointer"><b>X</b></button>
                        <h6>
                            <b>
                                <%= item.name %><br>
                                <%= item.price %> ₺
                            </b>
                        </h6>
                        <br>
                        <p>Ürün kodu:
                            <%= item.id %>
                        </p>
                        <p>Beden: M</p>
                        <p>Renk: Siyah</p>
                        <div class="row valign-wrapper right">
                            <a id="qtyMinus" class="waves-effect waves-light btn white black-text z-depth-0">-</a>
                            <div id="itemQty">
                                <%= item.qty %>
                            </div>
                            <a id="qtyPlus" class="waves-effect waves-light btn white black-text z-depth-0">+</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
        <ul class="collection col s12 m4 cart">
            <p class="center">Alışveriş sepeti toplamı</p>

            <li class="collection-item">
                Sipariş değeri ₺
            </li>
            <li class="collection-item">
                Toplam 99.9 ₺
            </li>
        </ul>
    </div>
    <% } else { %>
    <h6><b>Alışveriş sepetiniz boş!</b></h6>
    <p style="padding-bottom: 2em;">Alışveriş sepetinize ürün kaydetmek veya daha önce kaydedilmiş ürünlere erişmek
        için oturum açın.</p>
    <% } %>
</div>
</div>

<%- include partials/footer %>
<script src="/javascripts/cart.js"></script>
