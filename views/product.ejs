<%- include partials/header %>

<div class="row">
    <img src="https://images.unsplash.com/photo-1546650855-1d0a29c1a31d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1576&q=80"
        class="col s12 m3 offset-m1" />
    <img src="https://images.unsplash.com/photo-1546650855-1d0a29c1a31d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1576&q=80"
        class="col s12 m3 " />
    <div id="product" class="col s6 m3 section scrollspy">
        <h4 class="productName">
            <%= product.name %>
        </h4>
        <h5>
            <%= product.price.toFixed(2) %> â‚º</h5>
        <br><br>
        <div class="input-field black-text colors">
            <select>
                <% colors.forEach((color, index) => { %>
                <option value="<%= index %>"><%= color %></option>
                <% }); %>
            </select>
            <label>Renk</label>
        </div>
        <br>
        <div class="input-field black-text sizes">
            <select>
                <% sizes.forEach((size, index) => { %>
                <option value="<%= index %>"><%= size %></option>
                <% }); %>
            </select>
            <label>Beden</label>
        </div>
        <br>
        <a class="waves-effect waves-light btn button-buy light-green darken-4 white-text col s12 m12 valign-wrapper">
            <i class="material-icons left">shopping_cart</i>
            <b class="center">Ekle</b>
        </a>
    </div>
</div>
<br>
<div class="row">
    <h5 class="col s10 m10 offset-m1 center">
        <%= product.description %>
    </h5>
</div>

