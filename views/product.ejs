<%- include partials/header %>

<div class="row">
    <div class="col s12 m4 offset-m2 carousel carousel-slider">
        <div class="carousel-item red white-text" href="#one!">
            <img src="https://via.placeholder.com/800x900.jpg?text=insert+image+here+(1)" />
        </div>
        <div class="carousel-item amber white-text" href="#two!">
            <img src="https://via.placeholder.com/900x400.jpg?text=insert+image+here+(2)" />
        </div>
        <div class="carousel-item green white-text" href="#three!">
            <img src="https://via.placeholder.com/900x400.jpg?text=insert+image+here+(3)" />
        </div>
        <div class="carousel-item blue white-text" href="#four!">
            <img src="https://via.placeholder.com/900x400.jpg?text=insert+image+here+(4)" />
        </div>
    </div>

    <div id="product" class="col s12 m2 section scrollspy">
        <h4 class="productName">
            <%= product.name %>
        </h4>
        <h5>
            <%= product.price.toFixed(2) %> â‚º</h5>
        <br><br>

        <div>
            <label>Renk</label>
            <br>
            <% colors.forEach((color, idx) => { %>
            <a href="/product/<%= color.product %>" id="<%= color.id %>"
                class="btn-flat <%= colorProps[idx] %> darken-3 color">
                <% if (color.product === product.id) { %>
                <i class="material-icons white-text">check</i>
                <% }; %>
            </a>
            <% }); %>
        </div>
        <br>

        <div class="input-field black-text sizes">
            <select>
                <% sizes.forEach((size, index) => { %>
                <option value="<%= index %>"><%= size.name %></option>
                <% }); %>
            </select>
            <label>Beden</label>
        </div>

        <% include partials/size-guide %>

        <a class="waves-effect waves-light btn button-buy light-green darken-4 white-text col s12 m12 valign-wrapper">
            <i class="material-icons left">shopping_cart</i>
            <b class="center">Ekle</b>
        </a>
    </div>
</div>
<br>
<div class="row">
    <h5 class="col s10 m10 offset-m1 center">
        <%= product.description %>
    </h5>
</div>

<div class="row" style="margin: 3em 5%">
    <img src="https://via.placeholder.com/600x900.jpg?text=insert+image+here" class="col s12 m4" />
    <img src="https://via.placeholder.com/600x900.jpg?text=insert+image+here" class="col s12 m4" />
    <img src="https://via.placeholder.com/600x900.jpg?text=insert+image+here" class="col s12 m4" />
</div>

<%- include partials/footer %>
<script src="/javascripts/product.js"></script>
